<!DOCTYPE html>
<html>
<head>
  <title>DrinkMachine</title>
  <%= stylesheet_link_tag  'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
    <% if session[:user_id] %>
      <%= content_tag(:nav, class: "navbar navbar-default") do %>
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to(sessions_logout_path) do %>
              <span class="glyphicon glyphicon-object-align-left"> </span><%= "Logout!"%>
            <% end %>
            </li>
            <li class="active"><%= link_to(movies_path) do %>
              <span class="glyphicon glyphicon-play"></span><%= "Movies"%>
            <% end %>
            </li>
          </ul>
      <% end %>
    <% end %>
  </div>
  <div id="main">
    <%= yield %>


  </div>
</body>
</html>
