<style div.hero {background-image: url('<%= asset_path Character.last.main_image %>';} )></style>

<div class="hero">
	<div class="hero-inner">
		<div class="hero-copy">
			<div id="summary">
				<h1>Movie Beer</h1>
				<p>Have you ever watched a crappy movie and wish you could get the perfect buzz?  Well, you're in luck! Movie Beer is an app geared towards your alcohol needs.  You enter a movie, we process all of the details of
				that movie and give you back a recommended beer to go along with that movie, which is then stored in our database for future reference.  Cheers!</p>
			</div>
		</div>
	</div>
	<span id="quote" class="speech">"<%= Character.get_quote %>"</span>
</div>

<% if  @user.just_created? %>
	<div class="modal">
		<input class="modal-state" id="modal-last-beer" type="checkbox" />
		<div class="modal-window">
			<div class="modal-inner">
				<label class="modal-close" for="modal-last-beer"></label>
				<%= render partial: "beer", locals: {beer: @user.get_last_beer} %>
			</div>
		</div>
	</div>
<% end %>
	<div id="movie-cards">
		<div class="cards">
		<% @movies.each do |m| %>
			<div class="card">
				<div class="card-image">
					<span class="movie-image"><%= image_tag m.poster %></span>
				</div>
				<div class="card-header">
		      <%= m.name %>
		    </div>
				<div class="card-copy">
					<p>
						Year: <%= m.year %>
					</p>
					<p> Rating: <%= m.rating %></p>
					<p><button><label for="modal-<%= m.beer %>"><i class="fa fa-beer"></i>Movie Beer</label></button></p>
					<div class="modal">
						<input class="modal-state" id="modal-<%= m.beer %>" type="checkbox" />
						<div class="modal-window">
							<div class="modal-inner">
								<label class="modal-close" for="modal-<%= m.beer %>"></label>
								<%= render partial: "beer", locals: {beer: m.beers.first} %>
							</div>
						</div>
					</div>
					<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, m, method: :delete, remote: true, class: "delete-movie" %>
				</div>
			</div>
		<% end %>
		</div>
	</div>
