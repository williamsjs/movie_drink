<%= form_for(@movie) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :director %>
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div class="field">
    <%= f.submit "Submit!" %>
  </div>


<% end %>
