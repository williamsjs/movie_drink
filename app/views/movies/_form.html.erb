<%= form_for(@movie) do |f| %>

  <div id="new-movie-form">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :director %>
      <%= f.text_field :director %>
    </div>
  </div>
  <div class="field">
    <%= f.submit "Submit!" %>
  </div>
<% end %>
