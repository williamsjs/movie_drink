<% if !beer.nil? %>
  <div id="beer-modal">
    <h1>Recommended Beer: </h1>
    <%= image_tag beer.url_image %>
    <ul>
      <li><span id="beer-title"><%= beer.name %></span></li>
      <li><span>ABV: </span><%= beer.abv %></li>
      <li><span>Description: </span><%= beer.description %></li>
      <li><span>Location: </span><%= beer.location %></li><br>
      <h1>Check out local breweries in your area today!</h1>
      <iframe width="600" height="450" frameborder="0" style="border:0"
      src=<%= @user.return_map %> allowfullscreen></iframe>
    </ul>
  </div>
<% else %>
  <h1>No Beer Available.... bummer</h1>
<% end %>
